generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KeyCard {
  id          String   @id @default(uuid())
  code        String   @unique
  isUsed      Boolean  @default(false)
  isValid     Boolean  @default(true)
  generatedAt DateTime @default(now())
  expiresAt   DateTime
  permissions String[]

  generatorId String
  generatedBy Admin  @relation(name: "AdminToKeyCardCreated", fields: [generatorId], references: [id])
  usedBy      Admin? @relation("KeyCardToAdmin")
}

model Admin {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  hash        String
  // refreshTokenHash String?
  joinedAt    DateTime @default(now())
  suspended   Boolean  @default(false)
  permissions String[]
  isSystem    Boolean  @default(false)

  keyCardId       String?   @unique
  keyCard         KeyCard?  @relation("KeyCardToAdmin", fields: [keyCardId], references: [id], onDelete: SetNull)
  keyCardsCreated KeyCard[] @relation(name: "AdminToKeyCardCreated")
  dishes          Dish[]
}

model Dish {
  id          String      @id @default(uuid())
  imgs        DishImage[]
  name        String
  description String
  price       Decimal
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  available   Boolean     @default(true)
  dropped     Boolean     @default(false)

  orderItems OrderItem[]
  creatorId  String?
  creator    Admin?      @relation(fields: [creatorId], references: [id], onDelete: SetNull)
}

model DishImage {
  id       String  @id @default(uuid())
  location String  @unique
  dishId   String
  dropped  Boolean @default(false)
  dish     Dish    @relation(fields: [dishId], references: [id], onDelete: Cascade)
}

model Order {
  id              String      @id @default(uuid())
  customerName    String
  email           String
  phone           String
  deliveryAddress String
  status          OrderStatus @default(PENDING)
  orderedAt       DateTime    @default(now())
  txreference     String      @unique
  totalPrice      Decimal

  items OrderItem[]
}

model OrderItem {
  id              String   @id @default(uuid())
  orderId         String
  dishId          String
  quantity        Int      @default(1)
  priceAtPurchase Decimal
  createdAt       DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  dish  Dish  @relation(fields: [dishId], references: [id], onDelete: Restrict)

  @@unique([orderId, dishId])
}

enum OrderStatus {
  NOTYETPAID
  PENDING
  PROCESSING
  COMPLETED
  DISMISSED
  CANCELLED
}
